<h1>Task List</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %> (Status: <%= task.completed ? 'Completed' : 'Incomplete' %>)
      <p><%= task.details %></p>
      <%= link_to 'Edit', edit_task_path(task) %> |
      <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>
    </li>
  <% end %>
</ul>
